# This is the root .env.example file
# Copy this file to .env in each package that needs it

# API Environment Variables
API_PORT=3001
API_WS_PORT=3004
API_CORS_ORIGIN=http://localhost:4000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fieldhive_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Web Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3004
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token

# Security
JWT_SECRET=your_development_jwt_secret

# Feature Flags
NEXT_PUBLIC_ENABLE_MOCK_DATA=true
NEXT_PUBLIC_ENABLE_3D_MAPS=true
